From: Michael Biebl <biebl@debian.org>
Date: Wed, 17 Jul 2013 18:27:39 +0200
Subject: Don't move libgudev to /lib

libgobject and libgmodule are currently installed in /usr/lib.
---
 Makefile.am | 9 ---------
 1 file changed, 9 deletions(-)

diff --git a/Makefile.am b/Makefile.am
index eb57ea3..48cfba6 100644
--- a/Makefile.am
+++ b/Makefile.am
@@ -2353,15 +2353,6 @@ typelibs_DATA = \
 CLEANFILES += $(gir_DATA) $(typelibs_DATA)
 endif # HAVE_INTROSPECTION
 
-# move lib from $(libdir) to $(rootlibdir) and update devel link, if needed
-libgudev-install-hook:
-	libname=libgudev-1.0.so && $(move-to-rootlibdir)
-
-libgudev-uninstall-hook:
-	rm -f $(DESTDIR)$(rootlibdir)/libgudev-1.0.so*
-
-INSTALL_EXEC_HOOKS += libgudev-install-hook
-UNINSTALL_EXEC_HOOKS += libgudev-uninstall-hook
 endif
 
 EXTRA_DIST += \
